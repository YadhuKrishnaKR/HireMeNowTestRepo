@using HireMeNow_BlazorApp.Models;
@using HireMeNow_BlazorApp.Dtos;
@using HireMeNow_BlazorApp.Interfaces
@inject IUserService _userServices
@foreach (var user in users)
{
    <div class="col-md-3">
        <div class="card">
            <img class="img-fluid" src="publicassets/images/gray-user.png" width="150px" style="align-items:center;">

            <div class="card-body text-center">
                <h5 class="card-title">@user.FirstName</h5>
                <p class="card-text">@user.Email</p>
                <div class="d-flex justify-content-between">
                    <button class="remove btn rounded-pill mr-2">REMOVE</button>
                    <button class="block btn rounded-pill">BLOCK</button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    [Parameter]
    public string id { get; set; }
    [Parameter]
    public User User { get; set; }
    List<User> users;

    protected override void OnInitialized()
    {
        users = _userServices.jobProviderListing();
    }

}
